---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
    headline: string;
}

const { headline } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative h-screen w-full flex items-center justify-start overflow-hidden">
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/40 to-transparent z-10"></div>
        <div class="w-full h-full bg-cover bg-center" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuBWnJ0EKvBHSTZxMYQ5fYnNK6pUYzGthEHn5rbCvQ3axTGTvvsn7s68bvqjVZH-rqrH9dJgSrMOoeud8th5T7p4QUo3e3A3C0IUjkg60AtVSaG1CuR6kcDD4CLCwxosluCWcWMqSaoBWz4Vqsvtl54_HyyTwO6iXbGHJ0DZJ-9jcqMq6zjFvjWn0jmDiI8k-l4R_9exWWl0VMtK8tQUvBp2MYDbGJsjcA2Zwm1Uki_NBO5tKDF1SmOmtdkDxYHyznEX3f9bNmfp7nRE');"></div>
    </div>
    <div class="relative z-20 px-6 md:px-24 max-w-4xl">
        <span class="inline-block text-primary font-bold tracking-widest uppercase text-xs mb-4">Fine Art & Surrealism</span>
        <h1 class="text-5xl md:text-8xl font-black leading-none mb-6 tracking-tighter">
            {headline} <br/><span class="text-white/40 italic">Unseen</span>
        </h1>
        <p class="text-lg md:text-xl text-slate-300 max-w-xl mb-10 font-light leading-relaxed">
            {t('hero.desc')}
        </p>
        <div class="flex gap-4">
            <button class="bg-white text-black px-8 py-4 rounded-lg font-bold hover:bg-primary hover:text-white transition-all">
                {t('hero.view_projects')}
            </button>
            <button class="border border-white/20 text-white px-8 py-4 rounded-lg font-bold hover:bg-white/10 transition-all">
                {t('hero.get_in_touch')}
            </button>
        </div>
    </div>
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce z-20">
        <span class="material-symbols-outlined text-white/30 text-3xl">keyboard_arrow_down</span>
    </div>
</section>
