---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
    headline: string;
    description?: string;
}

const { headline, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative h-screen w-full flex items-center justify-start overflow-hidden bg-white">
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-br from-white via-white/40 to-slate-50 z-10"></div>
        <div class="absolute right-0 top-0 w-1/2 h-full bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-primary/5 via-transparent to-transparent z-0 opacity-50"></div>
        <!-- Decorative geometrical element -->
        <div class="absolute -right-20 -top-20 w-96 h-96 border border-primary/10 rounded-full z-0"></div>
        <div class="absolute right-40 bottom-20 w-64 h-64 border border-primary/5 rotate-45 z-0"></div>
    </div>
    <div class="relative z-20 px-6 md:px-24 max-w-5xl">
        <h1 class="text-6xl md:text-9xl font-black leading-none mb-8 tracking-tighter text-slate-900">
            {headline} <br/><span class="text-primary italic font-light opacity-80">Studio</span>
        </h1>
        <p class="text-lg md:text-xl text-slate-500 max-w-xl mb-12 font-medium leading-relaxed border-l-2 border-primary/20 pl-8">
            {description || t('hero.desc')}
        </p>
        <div class="flex flex-wrap gap-6">
            <button class="bg-slate-900 text-white px-10 py-4 rounded-full font-bold hover:bg-primary transition-all shadow-xl shadow-slate-900/10 hover:shadow-primary/20">
                {t('hero.view_projects')}
            </button>
            <button class="border border-slate-200 text-slate-900 px-10 py-4 rounded-full font-bold hover:bg-slate-50 transition-all">
                {t('hero.get_in_touch')}
            </button>
        </div>
    </div>
    <div class="absolute bottom-12 left-6 md:left-24 animate-bounce z-20">
        <span class="material-symbols-outlined text-slate-300 text-4xl font-extralight">south</span>
    </div>
</section>
